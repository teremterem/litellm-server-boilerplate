# LiteLLM Server Configuration
LITELLM_HOST=0.0.0.0
LITELLM_PORT=8000

# Security - Generate a strong key for production
LITELLM_MASTER_KEY=sk-1234567890abcdef

# OpenAI API Configuration
# Required for forwarding requests to OpenAI GPT-5
OPENAI_API_KEY=your-openai-api-key-here

# Optional: OpenAI Organization ID
# OPENAI_ORGANIZATION=your-org-id

# Optional: Custom OpenAI API Base URL
# OPENAI_API_BASE=https://api.openai.com/v1

# Optional: Request timeout in seconds
# LITELLM_REQUEST_TIMEOUT=600

# Optional: Enable debug logging
# LITELLM_DEBUG=false

# Optional: Database URL for persistence (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/litellm

# Optional: Redis URL for caching
# REDIS_URL=redis://localhost:6379

# Optional: Enable telemetry
# LITELLM_TELEMETRY=false
