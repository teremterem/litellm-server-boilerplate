# Pylint configuration baseline
# Generated with: `pylint --generate-rcfile` (then lightly trimmed for brevity)
# You can regenerate fully if needed.

[MASTER]
ignore=CVS
jobs=1
persistent=yes
unsafe-load-any-extension=no
extension-pkg-allow-list=
load-plugins=
suggestion-mode=yes

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0801,  # duplicate-code (not helpful in small projects)

[REPORTS]
output-format=text
reports=no
score=yes

[BASIC]
good-names=i,j,k,ex,Run,_,id
bad-names=
variable-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))$
const-rgx=([A-Z_][A-Z0-9_]*)|(__.*__)$
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
docstring-min-length=10

[FORMAT]
max-line-length=119
max-module-lines=2000
indent-string='    '
single-line-if-stmt=no
no-space-check=

[TYPECHECK]
ignored-modules=
ignored-classes=
disable=E1136

[STRING]
check-quote-consistency=no
check-str-concat-over-line-jumps=no

[LOGGING]
logging-format-style=old
logging-modules=logging

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[SPELLING]
spelling-dict=
spelling-ignore-words=
spelling-private-dict-file=
spelling-store-unknown-words=no

[DESIGN]
max-args=10
max-attributes=15
max-bool-expr=5
max-branches=12
max-locals=25
max-parents=7
max-parents-with-interfaces=7
max-public-methods=25
max-returns=6
max-statements=100
min-public-methods=0

[IMPORTS]
allow-wildcard-with-all=no
known-standard-library=
known-third-party=litellm
known-first-party=server
deprecated-modules=optparse
preferred-modules=

[CLASSES]
defining-attr-methods=__init__,__new__,setUp
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=cls

[EXCEPTIONS]
overgeneral-exceptions=Exception
